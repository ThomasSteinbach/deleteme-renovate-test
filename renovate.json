{
    "extends": [
        "config:best-practices",
        ":disableRateLimiting"
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "requirements.yaml"
            ],
            "matchStrings": [
                "name:\\s*(?<depName>https://github.com/(?<packageName>[a-zA-Z0-9_.-]+/[a-zA-Z0-9_.-]+))\\n.*?type:\\s*git\\n.*?version:\\s*(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
            ],
            "datasourceTemplate": "github-tags",
            "depNameTemplate": "{{ packageName }}"
        }
    ]
}